<%- include("../partials/header") %>
<div class="container" style="margin-top: 80px;">
    <div class="row">
        <h1 style="text-align: center;">Create a new Post!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newpost[title]" id="" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newpost[image]" placeholder="url"> 
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="newpost[description]" id="" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newpost[author]" id="" placeholder="author">
                </div>
                <div class="dropdown form-group">
                    <select class="dropdownbtn btn btn-default dropdown-toggle" name="newpost[type]" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" required>
                        <option value="" selected disabled>Type</option>
                        <option value="normal">Normal</option>
                        <option value="featured">Featurd</option>
                    </select>
                    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/posts">Go Back!</a>
        </div>
        
        
    </div>
   
</div>
<%- include("../partials/footer") %>